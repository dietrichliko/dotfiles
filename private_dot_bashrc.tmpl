# .bashrc
# Source global definitions

if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi

if [ -f ~/.bash_funcs ]; then
    . ~/.bash_funcs
fi

HISTTIMEFORMAT="%d/%m/%y %T "
HISTSIZE=500000
HISTFILESIZE=100000
HISTCONTROL="erasedups:ignoreboth"

shopt -s no_empty_cmd_completion
shopt -s globstar
shopt -s nocaseglob
shopt -s autocd 
shopt -s dirspell
shopt -s cdspell
shopt -s direxpand

{{ if eq .location "lxplus" }}
export CDPATH="~/working:/afs/cern.ch/work/${USER:0:1}/${USER}"
{{ else }}
export CDPATH=~/working
{{ end }}

type direnv > /dev/null 2>&1 
if [ $? -eq 0 ]; then
    export DIRENV_LOG_FORMAT=$'\E[2mdirenv: %s\E[0m'
    eval "$(direnv hook bash)"
fi
type starship > /dev/null 2>&1
if [ $? -eq 0 ]; then
    eval "$(starship init bash)"
fi

{{ if .conda }}
# setup conda & mamba
if [ -f "{{ .conda }}/etc/profile.d/conda.sh" ]; then
    source "{{ .conda }}/etc/profile.d/conda.sh"
fi
if [ -f "{{ .conda }}/etc/profile.d/mamba.sh" ]; then
    source "{{ .conda }}/etc/profile.d/mamba.sh"
fi
{{ end }}

