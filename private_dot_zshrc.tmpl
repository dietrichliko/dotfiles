# .zshrc 
# This file is managed by chezmoi. DO NOT EDIT

autoload -U compinit; compinit

fpath=(~/.zfunc $fpath);
autoload -U $fpath[1]/*(.:t)


HISTFILE=~/.histfile
HISTSIZE=1000
SAVEHIST=1000
setopt appendhistory autocd extendedglob nomatch notify

{{ if eq .location "lxplus" }}
export CDPATH="~/working:/afs/cern.ch/work/${USER:0:1}/${USER}"
{{ else }}
export CDPATH="~/working"
{{ end }}

export DIRENV_LOG_FORMAT=$'\E[2mdirenv: %s\E[0m'
eval "$(direnv hook zsh)"
eval "$(starship init zsh)"

# bitwarden ssh agent

{{ if eq .chezmoi.os "darwin" }}
export SSH_AUTH_SOCK={{ .chezmoi.homeDir }}/Library/Containers/com.bitwarden.desktop/Data/.bitwarden-ssh-agent.sock
{{ else if eq .location "desktop" "Desktop" }}
export SSH_AUTH_SOCK={{ .chezmoi.homeDir }}/.var/app/com.bitwarden.desktop/data/.bitwarden-ssh-agent.sock
{{ end }}

{{ if .conda }}
# setup conda & mamba
if [ -f "{{ .conda }}/etc/profile.d/conda.sh" ]; then
    source "{{ .conda }}/etc/profile.d/conda.sh"
fi
if [ -f "{{ .conda }}/etc/profile.d/mamba.sh" ]; then
    source "{{ .conda }}/etc/profile.d/mamba.sh"
fi
{{ end }}

