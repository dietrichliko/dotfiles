[data]
{{ if regexMatch "lxplus\\d+\\.cern\\.ch" .chezmoi.fqdnHostname }}
    location = "lxplus"
{{ else if regexMatch "*.cbe.vbc.ac.at" .chezmoi.fqdnHostname }}
    location = "clip"
{{ else }}
    location = "desktop"
{{ endif }}

    # Git Credential helper
    # Values: cache, osxkeychain, libsecret, ... 
    # See also: https://git-scm.com/docs/gitcredentials
{{  if eq location "desktop" }}
{{     if .chezmoi.os "darwin" }}
    git_credential_helper = "osxkeychain"
{{     else }}
    git_credential_helper = "libsecret"
{{     endif }}
{{  else }}
    git_credential_helper = "cache"
{{ end }}
